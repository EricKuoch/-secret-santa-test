<div class="new">
  <div class="container">
    <div class="form">
      <h4> <strong>Give us some information about your next Secret Santa ! 🎁 </strong> </h4>
      <%= simple_form_for [ @event] do |f| %>
        <%= f.input :title, label: "EVENT'S TITLE" %>
        <%= f.input :description, label: "DESCRIPTION"  %>
        <%= f.input :max_amount, label: "AMOUNT TO SPEND (€)"  %>
        <%= f.input :date, label: "DATE" %>
        <div class="text-center">
          <%= f.submit "Create your Secret Santa", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
